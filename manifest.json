{
  "name": "Linky",
  "version": "1.0",
  "description": "Reliably open links in a new tab while keeping the current tab active.",
  "permissions": ["activeTab", "storage"],
  "manifest_version": 2,

  "icons": { 
    "16": "images/LINKY16.png",
    "32": "images/LINKY32.png",
    "48": "images/LINKY48.png",
    "128": "images/LINKY128.png" 
  },

  "browser_action": {
    "default_title": "Linky",
    "default_popup": "popup.html",
    "js": ["bootstrap.min.js", "popup.js"]
  },

  "background": 
  { 
      "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["jquery-3.3.1.min.js", "contentScript.js"]
    }
  ]
}